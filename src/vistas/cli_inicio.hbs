                        <div class="contenedor-icono-info--icono">
                            <i class="fas fa-layer-group"></i>
                        </div>
                        <div class="contenedor-icono-info--info">
                            <div class="contenedor-icono-info--texto_principal">
                                <span>{{r_construidos}}</span>
                                <span>m<sup>2</sup></span>
                            </div>
                            <div class="contenedor-icono-info--texto_normal">Construidos</div>
                        </div>
                    </div>
                </div>

                <div class="contenedor-icono-info-1">
                    <div class="contenedor-icono-info-2">
                        <div class="contenedor-icono-info--icono">
                            <i class="fas fa-folder-open"></i>
                        </div>
                        <div class="contenedor-icono-info--info">
                            <div class="contenedor-icono-info--texto_principal">
                                <span>{{r_proyectos}}</span>
                            </div>
                            <div class="contenedor-icono-info--texto_normal">Proyectos</div>
                        </div>
                    </div>
                </div>

                <div class="contenedor-icono-info-1">
                    <div class="contenedor-icono-info-2">
                        <div class="contenedor-icono-info--icono">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="contenedor-icono-info--info">
                            <div class="contenedor-icono-info--texto_principal">
                                <span>{{r_inmuebles}}</span>
                            </div>
                            <div class="contenedor-icono-info--texto_normal">Inmuebles</div>
                        </div>
                    </div>
                </div>

                <div class="contenedor-icono-info-1">
                    <div class="contenedor-icono-info-2">
                        <div class="contenedor-icono-info--icono">
                            <i class="fas fa-hard-hat"></i>
                        </div>
                        <div class="contenedor-icono-info--info">
                            <div class="contenedor-icono-info--texto_principal">
                                <span>{{r_empleos}}</span>
                            </div>
                            <div class="contenedor-icono-info--texto_normal">Empleos</div>
                        </div>
                    </div>
                </div>

                <div class="contenedor-icono-info-1">
                    <div class="contenedor-icono-info-2">
                        <div class="contenedor-icono-info--icono">
                            <i class="fas fa-coins"></i>
                        </div>
                        <div class="contenedor-icono-info--info">
                            <div class="contenedor-icono-info--texto_principal">
                                <span class="elvalor" data-bs="{{n_ahorros}}">{{r_ahorros}}</span>
                                <span class="lamoneda">Bs</span>
                            </div>
                            <div class="contenedor-icono-info--texto_normal">Ganancias</div>
                        </div>
                    </div>
                </div>

                <div class="contenedor-icono-info-1">
                    <div class="contenedor-icono-info-2">
                        <div class="contenedor-icono-info--icono">
                            <i class="fas fa-hand-holding-heart"></i>
                        </div>
                        <div class="contenedor-icono-info--info">
                            <div class="contenedor-icono-info--texto_principal">
                                <span class="elvalor" data-bs="{{n_resp_social}}">{{r_resp_social}}</span>
                                <span class="lamoneda">Bs</span>
                            </div>
                            <div class="contenedor-icono-info--texto_normal">Sociedad</div>
