<main class="contenedor-icono-info-madre">

    <div class="container-fluid">
        <div class="row mt-4">

            <div class="contenedor-icono-info-hijo col-12 col-md-6">
                <div class="contenedor">
                    <div class="caja">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                        <div class="contenido">
                            <h1 class="escritura">{{texto_inicio_principal}}</h1>
                        </div>
                    </div>
                </div>
            </div>

            <div class="contenedor-icono-info-hijo col-12 col-md-6">

                <div class="contenedor-icono-info-1">
