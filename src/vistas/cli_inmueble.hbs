    {{#each global_inm.imagenes_inm_principal}}
    <a href="{{url}}" data-fancybox="gallery"
        data-caption="{{nombre_imagen}}"><img src="{{url}}"
            alt="{{nombre_imagen}}"></a>
    {{/each}}

    {{#each global_inm.imagenes_inm_exclusiva}}
