{{!-- "> cli_opciones_nav"  NO DEBE ESTAR APEGADO A LA LINEA CODIGO "1", DE ESTARLO, DARIA UN ERROR --}}
{{!-- para visualizar los inmuebles resultados de la busqueda desde la pagina publica del cliente --}}

{{!-- RESULTADO DE BUSQUEDAS DE INMUEBLES O REQUERIMIENTOS DESDE EL LADO DEL CLIENTE --}}

{{!-- ------------------------- --}}
{{!-- datos elementales --}}
<div id="id_tipo_ventana" data-tipo_ventana="normal"></div>

{{!-- data-objetivo_tipo = terreno, inmueble, proyecto, propietario, cards_proyectos, resultados_busqueda --}}
<div id="id_objetivo_tipo" data-objetivo_tipo="resultados_busqueda"></div>
<div id="id_objetivo_codigo" data-objetivo_codigo="{{codigo_propietario}}"></div>
{{!-- ------------------------- --}}

<div class="tipo_ventana" data-tipo_ventana="busqueda-inm-cli"></div>

{{> cli_opciones_nav}}

{{> adm_cli_cabezeras_externas}}

{{#if existen_resultados}}

    {{#if tipo_resultado_inmuebles}}
    <div class="container-fluid p-4">
        <div class="row" id="contenedor_py_inm_render">

            <div class="ref_tipo_py_inm"></div>
            {{!-- debajo de esta ref, es que se renderizaran los inmuebles resultados de la busqueda --}}
            {{#each inmuebles_renderizar}}

                {{> adm_cli_card_inmueble}}

            {{/each}}

        </div>
    </div>
    {{/if}}

    {{#if tipo_resultado_proyectos}}
    <div class="container-fluid p-4">
        <div class="row" id="contenedor_py_inm_render">

            <div class="ref_tipo_py_inm"></div>
            {{!-- debajo de esta ref, es que se renderizaran los inmuebles resultados de la busqueda --}}

            {{#if cards_proyectos}}
                {{#each proyectos_renderizar}}

                    {{> adm_cli_card_proyecto}}

                {{/each}}
            {{/if}}

            {{#if cards_terrenos}}
                {{#each proyectos_renderizar}}

                    {{> adm_cli_card_terreno}}

                {{/each}}
            {{/if}}

        </div>
    </div>
    {{/if}}

    {{#if tipo_resultado_requerimientos}}
    <div class="container-fluid p-4">
        <div class="row" id="contenedor_py_inm_render">

            {{!-- anteriormente no incluia barra-deslizadora-mob --}}
            {{! "table-responsive" es para que tenga un scroll en tamaños muy pequeños }}
            <div class="tabla_caracteristicas barra-deslizadora-mob table-responsive cuadro_estandart p-4">

                <table class="tabla_contenedora table">
                    <thead>
                        <tr>
                            <th class="texto-resaltado">Ciudad</th>
                            <th class="texto-resaltado">Fecha&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th class="texto-resaltado">Código</th>
                            <th class="texto-resaltado">Requerimiento&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th class="texto-resaltado">Descripción&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
                            <th class="texto-resaltado">Cantidad</th>
                            <th class="texto-resaltado">Presupuesto Max.</th>
                            <th class="texto-resaltado">Proyecto</th>
                        </tr>
                    </thead>

                    <tbody class="cuerpo_filas texto-normal">

                        {{#each requerimientos_renderizar}}
                            <tr class="fila_registro">
                                <td>{{ciudad}}</td>
                                <td>{{fecha}}</td>
                                <td>{{codigo_requerimiento}}</td>
                                <td class="escritura">{{requerimiento}}</td>
                                <td class="escritura">{{descripcion}}</td>
                                <td>{{cantidad}}</td>
                                <td>{{presupuesto_maximo}}</td>
                                <td>
                                    <div class="text-center">
                                        <a
                                            class="btn btn-success"
                                            href="/proyecto/{{codigo_proyecto}}/requerimientos"
                                        >Proyecto</a>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}

                    </tbody>

                </table>
            </div>
        </div>
    </div>
    {{/if}}

{{else}}

    {{#if tipo_resultado_inmuebles}}
    <div class="container mt-5">
        <div class="contenedor-inexistentes jumbotron">

            <div class="texto-resaltado text-center">
                <i class="fas fa-sad-tear" style="font-size: 5rem;"></i>
            </div>
            <h1>¡Sin resultados!</h1>
            <br>
            <p class="h5">
                Lo sentimos, pero aun no existen INMUEBLES vigentes que cumplan con las características de su
                búsqueda
            </p>
            
            <div class="contenedor-carga">
                <div class="dot-container">
                    <div class="dot dot-1"></div>
                    <div class="dot dot-2"></div>
                    <div class="dot dot-3"></div>
                </div>
            </div>

        </div>
    </div>
    {{/if}}

    {{#if tipo_resultado_proyectos}}
    <div class="container mt-5">
        <div class="contenedor-inexistentes jumbotron">

            <div class="texto-resaltado text-center">
                <i class="fas fa-sad-tear" style="font-size: 5rem;"></i>
            </div>
            <h1>¡Sin resultados!</h1>
            <br>
            <p class="h5">
                Lo sentimos, pero aun no existen PROYECTOS vigentes que cumplan con las características de su
                búsqueda
            </p>
            
            <div class="contenedor-carga">
                <div class="dot-container">
                    <div class="dot dot-1"></div>
                    <div class="dot dot-2"></div>
                    <div class="dot dot-3"></div>
                </div>
            </div>

        </div>
    </div>
    {{/if}}

    {{#if tipo_resultado_requerimientos}}
    <div class="container mt-5">
        <div class="contenedor-inexistentes jumbotron">

            <div class="texto-resaltado text-center">
                <i class="fas fa-sad-tear" style="font-size: 5rem;"></i>
            </div>
            <h1>¡Sin resultados!</h1>
            <br>
            <p class="h5">
                Lo sentimos, pero aun no existen REQUERIMIENTOS vigentes que cumplan con las características de su
                búsqueda
            </p>
            
            <div class="contenedor-carga">
                <div class="dot-container">
                    <div class="dot dot-1"></div>
                    <div class="dot dot-2"></div>
                    <div class="dot dot-3"></div>
                </div>
            </div>

        </div>
    </div>
    {{/if}}


{{/if}}

