{{! Fracciones de terreno }}

<div class="card_un_fraccion mb-3 col-12 col-sm-6 col-md-4 col-lg-3">

    <div class="card">

        <div class="card-body">

            <div class="text-center mb-2">

                {{#if lado_administrador}}

                    {{#if verde}}
                        <span class="titulo_4 color-verde">Disponible</span>
                    {{else}}
                        <a href="laapirest/fraccion/{{codigo_fraccion}}/descripcion">
                            <span class="h6">{{codigo_fraccion}}</span>
                        </a>
                    {{/if}}

                {{/if}}

                {{#if lado_cliente}}

                    {{!-- entonces pertenece al lado del cliente --}}
                    {{#if verde}}
                        <span class="titulo_4 color-verde">Disponible</span>
                    {{/if}}

                    {{#if gris}}
                        <span class="h6">{{codigo_fraccion}}</span>
                    {{/if}}

                    {{!-- esta disponible el link para el PROPIETARIO DE LA FRACCION y para el ADMINISTRADOR --}}
                    {{!-- el color no sera azul, sera anaranajado --}}
                    {{#if azul}}
                        <a href="/fraccion/{{codigo_fraccion}}/descripcion">
                            <span class="h6">{{codigo_fraccion}}</span>
                        </a>
                    {{/if}}

                {{/if}}

            </div>

            <div class="text-center titulo_4 mb-2" title="Valor fracción de terreno">
                <span class="elvalor" data-bs="{{fraccion_bs}}">{{fraccion_bs_render}}</span>
                {{!-- data-bs almacena el valor de la moneda en BS ENTERO, util para usarlo como referencia para las conversiones a $us que tambien deberan ser enteros --}}
                <span class="lamoneda">Bs</span>
            </div>

            {{#if existe_inversionista}}
                {{! ----- GANANCIA ------ }}
                <div class="linea-x"></div>

                <div class="text-center mt-2">Inversionista</div>
                <div class="d-flex justify-content-between my-2">
                    <div class="linea-v text-center w-50">
                        <div>
                            <div class="titulo_4">
                                <span class="elvalor" data-bs="{{ganancia_bs}}">{{ganancia_bs_render}}</span>
                                <span class="lamoneda">Bs</span>
                            </div>
                        </div>

                        <div class="">
                            <span class="">Ganancia</span>
                        </div>
                    </div>

                    <div class="text-center w-50">
                        <div>
                            <div class="titulo_4">
                                {{#if menor_igual}}
                                    <i class="fas fa-less-than-equal"></i>
                                {{/if}}
                                <span>{{dias_inversionista}}</span>
                                <span>Días</span>
                            </div>
                        </div>

                        <div class="">
                            <span class="">Duración</span>
                        </div>
                    </div>
                </div>

            {{/if}}

            {{#if existe_copropietario}}
                {{! ----- PLUSVALÍA ------ }}
                <div class="linea-x"></div>

                <div class="text-center">Copropietario</div>

                <div class="d-flex justify-content-between my-2">
                    <div class="linea-v text-center w-50">
                        <div>
                            <div class="h6">
                                <b>
                                    <span class="elvalor" data-bs="{{plusvalia_bs}}">{{plusvalia_bs_render}}</span>
                                    <span class="lamoneda">Bs</span>
                                </b>
                            </div>
                        </div>

                        <div class="mb-1">
                            <span class="h6">Plusvalía</span>
                        </div>
                    </div>

                    <div class="text-center w-50">
                        <div>
                            <div class="h6">
                                <b>
                                    <span>{{dias_plusvalia}}</span>
                                    <span>Días</span>
                                </b>
                            </div>
                        </div>

                        <div class="mb-1">
                            <span class="h6">Duración</span>
                        </div>
                    </div>
                </div>

            {{/if}}

        </div>

    </div>

</div>


