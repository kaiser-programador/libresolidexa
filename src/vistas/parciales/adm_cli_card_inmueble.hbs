{{! CARD de INMUEBLE para vistas EXTERNAS, INTERNAS lado ADMINISTRADOR Y CLIENTE }}

<div class="card_un_inm_py col-12 col-sm-6 col-md-4 col-lg-3">

    <div class="card mb-3">
        {{#if card_externo}}
            <div class="card-header" style="overflow: hidden;">
                <div class="card-cabeza">
                    {{nombre_proyecto}}
                </div>
                <div style="display: flex;">
                    <div style="width: 85%;">
                        <div class="card-ciudad-provincia-direccion">
                            {{ciudad}}
                            /
                            {{provincia}}
                        </div>
                        <div class="card-ciudad-provincia-direccion">
                            {{direccion}}
                        </div>
                    </div>
                    <div style="width: 15%;margin-top: 0.25em; margin-left: 0.25em;">
                        <img
                            src="/rutavirtualpublico/imagenes/{{bandera_ciudad}}"
                            title="Bandera ciudad"
                            style="width: 100%;"
                        />
                    </div>
                </div>
            </div>
        {{/if}}

        <div class="contenedor_imagen">
            <a href="{{laapirest}}inmueble/{{codigo_inmueble}}/descripcion">

                {{#if imagen_encontrado}}
                    <img
                        src="{{imagen_inmueble}}"
                        alt="Imagen principal proyecto"
                        class="estilo_imagen card-img-top"
                    />
                {{else}}
                    <img
                        src="/rutavirtualpublico/imagenes/sinimagen.png"
                        alt="Imagen principal proyecto"
                        class="estilo_imagen card-img-top"
                    />
                {{/if}}

                <a class="capa" href="{{laapirest}}inmueble/{{codigo_inmueble}}/descripcion">
                    <h1>Ver +</h1>
                </a>

            </a>

            <div class="d-inline-block inm-card-leyenda-precio p-2">
                <div>
                    <b>
                        <span class="h5 {{color_precio_inm}}">{{leyenda_precio_inm}}</span>
                    </b>
                </div>
                <div>
                    <b>
                        <span
                            class="h5 v_precio_venta_sus"
                            valor="{{precio_actual_inm}}"
                        >{{precio_actual_inm}}</span>
                        <span class="h5">$us</span>
                        <span class="v_precio" valor="{{num_puro_precio_actual}}" hidden></span>
                    </b>
                </div>
                <div>
                    <b>
                        <span class="h6"><s>{{precio_competencia}}</s></span>
                        <span class="h6">$us</span>
                    </b>
                </div>
            </div>

            {{! continuar con lo de abajo }}

            <div class="social_guardado_propiedad p-2">

                {{#if inmueble_guardado}}
                    <div
                        class="d-inline-block guardar_si_no"
                        data-id="{{codigo_inmueble}}"
                        estado="si_guardado"
                    >
                        <a>
                            <i class="fas fa-bookmark ml-4 estilo_colorido" title="Inmueble guardado"></i>
                        </a>
                    </div>
                {{else}}
                    <div
                        class="d-inline-block guardar_si_no"
                        data-id="{{codigo_inmueble}}"
                        estado="no_guardado"
                    >
                        <a>
                            <i class="fas fa-bookmark ml-4 estilo_gris" title="Guardar inmueble"></i>
                        </a>
                    </div>
                {{/if}}

                {{#if inmueble_propiedad}}
                    <div class="d-inline-block">
                        <a>
                            <i
                                class="fas fa-house-user ml-4"
                                style="color: blue; font-size:1.8em;"
                                title="Inmueble de tu propiedad"
                            ></i>
                        </a>
                    </div>
                {{else}}
                    <div class="d-inline-block">
                        <a>
                            <i
                                class="fas fa-house-user ml-4"
                                style="color: rgb(219, 205, 205); font-size:1.8em;"
                                title="Inmueble"
                            ></i>
                        </a>
                    </div>
                {{/if}}

            </div>

            <div class="container basicas_inmueble">
                <div class="clase_inmueble d-flex justify-content-between">
                    <div class="v_tipo_inmueble">{{tipo_inmueble}}</div>
                    <div title="Número del inmueble">

                        {{! <i class="fas fa-door-closed ml-2" style="color: blue;"></i>
                        <span>piso</span> }}

                        <i class="fas fa-door-closed ml-2 texto-resaltado"></i>
                        <span>{{puerta_inmueble}}</span>
                    </div>
                </div>

                <div class="d-flex justify-content-between atributos_inmueble">
                    <div title="Superficie del inmueble">
                        <i class="fas fa-ruler-combined ml-2 texto-resaltado"></i>
                        <span
                            style="font-size: 0.9rem;"
                            class="v_superficie"
                            valor="{{superficie_inmueble_m2}}"
                        >{{superficie_inmueble_render}}</span>
                        <span style="font-size: 0.9rem;">m2</span>
                    </div>

                    {{#if dormitorios_inmueble}}
                        <div title="Número de dormitorios">
                            <i class="fas fa-key ml-2 texto-resaltado"></i>
                            <span style="font-size: 0.9rem;">{{dormitorios_inmueble}}</span>
                        </div>
                    {{/if}}

                    {{#if banos_inmueble}}
                        <div title="Número de baños">
                            <i class="fas fa-bath ml-2 texto-resaltado"></i>
                            <span style="font-size: 0.9rem;">{{banos_inmueble}}</span>
                        </div>
                    {{/if}}

                    {{#if garaje_inmueble}}
                        <div title="Número de garajes">
                            <i class="fas fa-car ml-2 texto-resaltado"></i>
                            <span style="font-size: 0.9rem;">{{garaje_inmueble}}</span>
                        </div>
                    {{/if}}

                </div>
            </div>
        </div>

        <div class="card-body py-2">

            <div class="d-flex justify-content-between">
                <div>
                    <div class="h6">Financiado</div>
                    <div class="h6">
                        <b>
                            <span class="v_financiado">{{financiado}}</span>
                            <span>$us</span>
                        </b>
                    </div>
                </div>
                <div class="text-right">
                    <div class="h6">Meta</div>
                    <div class="h6">
                        <span><b>{{meta}} $us</b></span>
                    </div>
                </div>
            </div>

            <div style="position: relative;">
                <div class="progress" style="height: 1.5rem;">
                    <div
                        class="progress-bar"
                        role="progressbar"
                        style="width: {{porcentaje}}%;"
                    ></div>
                </div>
                <div class="css-val-porcentaje-celda">
                    <span>{{porcentaje_render}}</span>
                    <span>%</span>
                </div>
            </div>

            {{#if card_externo}}
                <div class="d-flex justify-content-between my-2">
                    <div>
                        <i class="fas fa-clock texto-resaltado"></i>
                        <span class="h6">{{factor_tiempo_titulo}}</span>
                    </div>
                    <div>
                        <span class="h6"><b>{{factor_tiempo_tiempo}}</b></span>
                    </div>
                </div>
            {{/if}}

            <div class="d-flex justify-content-between my-2">
                <div>
                    <i class="fas fa-coins texto-resaltado"></i>
                    <span class="h6">Reserva</span>
                </div>
                <div>
                    <span class="h6"><b>{{reserva}}</b></span>
                    <span class="h6"><b>$us</b></span>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-1">
                <div class="linea-v text-center w-50">
                    <div class="mb-1">
                        <span class="h6">Plazo</span>
                    </div>
                    <div>
                        <div class="h6">
                            <b>
                                <span class="v_meses_construccion">
                                    {{meses_construccion}}
                                </span>
                                <span>Meses</span>
                            </b>
                        </div>
                    </div>
                </div>

                <div class="text-center w-50">
                    <div class="mb-1">
                        <span class="h6">Ahorro</span>
                    </div>
                    <div>
                        <div class="h6">
                            <b>
                                <span class="v_ahorro" valor="{{num_puro_ahorro}}">{{ahorro}}</span>
                                <span>$us</span>
                            </b>
                        </div>
                    </div>
                </div>
            </div>

            <div class="linea-h"></div>

            {{!-- <div class="card-footer" title="Código del inmueble">
                {{codigo_inmueble}}
            </div> --}}

            <div class="card-footer" title="Código del inmueble">
                <a href="{{laapirest}}inmueble/{{codigo_inmueble}}/descripcion">
                    {{codigo_inmueble}}
                </a>
            </div>

        </div>

        <span
            class="clase_tipo_radio_inmueble"
            tipo_radio_inmueble="{{estado_inmueble}}"
            hidden
        >{{estado_inmueble}}</span>

        {{! PARA RESULTADOS DE BUSQUEDA, dependiendo si es VENCIMIENTO para: disponible o pendiente (remate no es considerado) }}
        <span class="v_vencimiento" valor="{{vencimiento}}" hidden></span>

    </div>

</div>