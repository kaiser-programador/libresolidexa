{{! fracciones del terreno }}

<div class="contenido container-fluid mt-4">

    <div class="row">
        <div class="col-12 col-sm-9 col-md-7 col-lg-4 col-xl-4">

            {{#if contenido_terreno.crear_fracciones}}
            {{!-- estara visible, cuando el terreno no cuente con fracciones --}}

            <div class="card mb-4">
                <div class="card-header">
                    <div class="titulo_3">CREAR FRACCIONES</div>
                </div>

                <div class="card-body">

                    <div class="form-group">
                        <label for="id_fraccion_bs">Precio Fracción</label>
                        <div class="input-group">
                            <input
                                type="number"
                                name="name_fraccion_bs"
                                id="id_fraccion_bs"
                                class="form-control"
                            />

                            <div class="input-group-append">
                                <div class="input-group-text bg-unidad">
                                    Bs
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="id_cantidad_fracciones">Cantidad</label>
                        <div class="input-group">
                            <input
                                type="number"
                                name="cantidad_fracciones"
                                id="id_cantidad_fracciones"
                                class="form-control"
                            />
                            <div class="input-group-append">
                                <div class="input-group-text bg-unidad">
                                    <i class="fas fa-box"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer text-center">
                    <button
                        class="btn boton-primario"
                        id="crear_fracciones_terreno"
                    >Crear</button>
                </div>
            </div>
            {{/if}}

            {{#if contenido_terreno.eliminar_fracciones}}
            {{!-- estara visible, cuando el terreno SI cuente con fracciones --}}
            <div class="card mb-4">
                <div class="card-header">
                    <div class="titulo_3">ELIMINAR FRACCIONES</div>
                </div>

                <div class="card-body">

                    <div class="form-group">
                        <label for="id_usuario_maestro">Usuario maestro</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text bg-unidad">
                                    <i class="fas fa-user"></i>
                                </div>
                            </div>

                            <input
                                type="text"
                                name="usuario_maestro"
                                id="id_usuario_maestro"
                                class="form-control"
                            />
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="id_clave_maestro">Contraseña maestro</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text bg-unidad">
                                    <i class="fas fa-lock"></i>
                                </div>
                            </div>

                            <input
                                type="password"
                                name="clave_maestro"
                                id="id_clave_maestro"
                                class="form-control"
                            />
                        </div>
                    </div>
                    <div class="text-center">
                        Todas las fracciones pertenecientes al terreno serán eliminadas.
                    </div>
                </div>

                <div class="card-footer text-center">
                    <button
                        class="btn boton-primario"
                        id="eliminar_fracciones_terreno"
                    >Eliminar</button>
                </div>
            </div>
            {{/if}}

        </div>
    </div>
</div>

{{! boton para crear nuevo inmueble }}

<div class="contenido container-fluid">
    <div class="row">
        <div class="contenedor_titulo_fracciones col-12 mb-3">
            <div class="titulo_3 cuadro_estandart p-2 text-center">
                FRACCIONES TERRENO
            </div>
        </div>
        {{#each contenido_terreno.terreno_fracciones}}
        {{> adm_cli_card_fraccion}}
        {{/each}}
    </div>
</div>