        <div class="d-none d-md-flex mr-3 contenedor-detalle-icono">
            <i class="fas fa-hard-hat"></i>
        </div>

        <div class="mx-md-4 contenedor-detalle-texto">
            <h4 class="texto-resaltado"><span class="icono_izq d-inline-block d-md-none"><i class="fas fa-hard-hat"></i></span>{{informacion.titulo_construccion_inm}}</h4>
            <p class="escritura" style="text-align: justify;">
                {{informacion.texto_construccion_inm}}
            </p>
            <p class="texto-normal" style="text-align: justify;">
