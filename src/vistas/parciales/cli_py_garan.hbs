{{#if contenido_proyecto.titulo_garantia_1}}
<div class="row mt-5 cuadro_estandart py-3">
    <div class="col-12 d-flex">
        <div class="mr-3 contenedor-detalle-icono">
            <i class="fas fa-handshake"></i>
        </div>

        <div class="contenedor-detalle-texto">
            <h4 class="texto-resaltado">{{contenido_proyecto.titulo_garantia_1}}</h4>
            <p class="escritura" style="text-align: justify;">
