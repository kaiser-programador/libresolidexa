{{!-- para la garantia del inmueble vista del lado del cliente publico --}}

{{#if contenido_proyecto.titulo_garantia_1}}
<div class="row mt-5 cuadro_estandart py-3">
    <div class="col-12 d-flex">
        <div class="d-none d-md-flex mr-3 contenedor-detalle-icono">
            <i class="fas fa-handshake"></i>
        </div>

        <div class="contenedor-detalle-texto">
            <div class="titulo_1 texto-normal"><span class="icono_izq d-inline-block d-md-none"><i class="fas fa-handshake"></i></span>{{contenido_proyecto.titulo_garantia_1}}</div>
            <p class="escritura" style="text-align: justify;">
                {{contenido_proyecto.garantia_1}}
            </p>
        </div>
    </div>
</div>
{{/if}}

